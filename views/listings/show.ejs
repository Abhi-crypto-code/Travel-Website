<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">


    <h3><%= listing.title %></h3>

    </div>
    <div class="card col-6 offset-3 show-card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body ">
          <p class="card-text">
            <!-- <b><%= listing.title %></b> -->
            <br>
        <b><%= listing.description %></b>
        <br>
        <b> &#8377; <%= listing.price.toLocaleString("en-IN") %></b>
        <br>
        <b><%= listing.location %></b>
        <br>
        <b><%= listing.country %></b>
        <br>
          </p>
  </div>
    </div>
    
    <div class= "btns">
         <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

         <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3 mb-3">
      <br>
      <h4>Leave a review</h4>
      <form action="/listings/<%= listing._id  %>/reviews" method="POST" novalidate  class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" rows="5" cols="20" class="form-control mb-3" required ></textarea>
          <div class="invalid-feedback">Please add some comments for review.</div>
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
      
      <br>

      <p><b>All Reviews</b></p>
        <div class="row">
        <%for(review of listing.reviews){%>
          <div class="card-body col-5 ms-3 mb-3 review-card">
            <h5 class="card-title">Anonymous</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> stars</p>
            <form action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-dark btn-sm">delete</button>
            </form>
          </div>

        <%}%>
        </div>

    </div>
        
    </div>
