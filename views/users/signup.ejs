<% layout("/layouts/boilerplate") %>

    <h1 class="col-6 offset-3">Sign up page</h1>
    <div class="row">
        <div class="col-6 offset-3">
            
            <form method="POST" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="user" class="form-label" >Username</label>
                <input name="username" placeholder="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label" >Email</label>
                <input name="email" placeholder="email" type="email" class="form-control" required>
                <div class="valid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label" >Passoword</label>
                <input name="password" placeholder="password" type="password" class="form-control" required>
                <div class="valid-feedback"></div>
            </div>
            <button class="btn btn-success">Sign up</button>
            </form>

        </div>
    </div>